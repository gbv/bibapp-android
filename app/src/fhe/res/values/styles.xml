<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Application theme, according to API level -->
    <style name="BibAppTheme" parent="@android:Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/BibAppTheme.ActionBar</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_ab_back_holo_dark</item>
        <item name="android:actionMenuTextColor">@drawable/actionbar_menu_text_color</item>
    </style>
    
    <style name="BibAppTheme.ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/ambient_color</item>
        <item name="android:titleTextStyle">@style/BibAppTheme.ActionBar.Text</item>
        <item name="android:subtitleTextStyle">@style/BibAppTheme.ActionBar.SubText</item>
    </style>
    
    <style name="BibAppTheme.ActionBar.Text" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/actionbar_text_color</item>
    </style>
    
    <style name="BibAppTheme.ActionBar.SubText" parent="BibAppTheme.ActionBar.Text">
        <item name="android:textSize">12sp</item>
    </style>

</resources>